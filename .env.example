# =================================
# YouTube Transcription API - Configurações
# =================================

# Token de autenticação da API
API_TOKEN=coringao

# Chave da API OpenAI para transcrição
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Modelo do Whisper API para transcrições
WHISPER_API_MODEL=gpt-4o-mini-transcribe

# Configurações do servidor
PORT=8000
LOG_LEVEL=INFO

# Configurações de CORS
CORS_ALLOW_ORIGINS=*

# Configurações da sessão persistente
PERSISTENT_SESSION_ENABLED=true

# Configurações de processamento
MAX_VIDEOS_PER_REQUEST=10
AUTO_CLEANUP_TEMP_FILES=true
TEMP_FILE_MAX_AGE_HOURS=24
MAX_VIDEO_DURATION_MINUTES=120
MAX_CONCURRENT_DOWNLOADS=2
MAX_CONCURRENT_TRANSCRIPTIONS=1

# Configurações do WhisperService (chunking de áudio)
WHISPER_TIMEOUT=600.0
WHISPER_MAX_RETRIES=3
WHISPER_RETRY_DELAY=2.0
WHISPER_CHUNK_DURATION_SECONDS=1500.0

# Configurações do navegador (refresh de cookies)
BROWSER_REFRESH_INTERVAL=10

# Configurações do Playwright
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
DISPLAY=:99
DOWNLOAD_TIMEOUT=300
TRANSCRIPTION_TIMEOUT=300
SESSION_HEALTH_CHECK_INTERVAL=120

# Git SHA (será preenchido automaticamente)
GIT_SHA=local-development